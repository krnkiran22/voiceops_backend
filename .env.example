# Server Configuration
PORT=4000
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/voiceops
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d
BOT_API_KEY=your_shared_secret_key_between_bot_and_backend
CORS_ORIGIN=https://voiceops.yourdomain.com

# Telegram Protocol
TELEGRAM_BOT_TOKEN=123456789:ABCDEF...

# AI Intelligence Layer
# Options: groq (recommended for free hosting), ollama (local), openai
AI_PROVIDER=groq

# Groq Settings (Supports multiple comma-separated keys for rotation)
OPENAI_API_KEY=gsk_your_groq_key_1,gsk_your_groq_key_2
AI_MODEL=llama-3.3-70b-versatile
AI_TRANSCRIPTION_MODEL=whisper-large-v3

# Groq/OpenAI Backups (Optional)
OPENAI_API_KEY=
AI_BASE_URL=

# Monitoring & Attendance
# The ID of the group where the bot will send nags/jokes
MONITORING_GROUP_ID=-100123456789
