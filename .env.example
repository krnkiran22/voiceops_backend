# Server Configuration
PORT=4000
MONGODB_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/voiceops
JWT_SECRET=generate_a_secure_random_string
JWT_EXPIRES_IN=7d
BOT_API_KEY=shared_secret_password_for_sync
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Production Backend URL (Used for Anti-Sleep Keep Alive)
# Set this to your actual Render URL to prevent server sleep
BACKEND_API_URL=https://your-app.onrender.com

# Telegram Protocol
TELEGRAM_BOT_TOKEN=123456789:ABCDEF...

# Monitoring & Attendance Group ID
MONITORING_GROUP_ID=-100123456789

# AI Intelligence Layer
# Options: groq, ollama, openai
AI_PROVIDER=groq

# Groq Rotation Keys (Supports comma-separated keys for rotation)
OPENAI_API_KEY=gsk_key1,gsk_key2,gsk_key3
AI_MODEL=llama-3.3-70b-versatile
AI_TRANSCRIPTION_MODEL=whisper-large-v3

# Secondary local backup (Optional)
OLLAMA_BASE_URL=http://localhost:11434/v1
